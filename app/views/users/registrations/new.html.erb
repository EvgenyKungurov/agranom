<div class="row">
  <div class="alert alert-success" role="alert">
    <h4 class="center_align"><%= t(:sign_up) %></h4>
  </div>
</div>

<div class="center-block">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div id="location">
        <div class="field" >
          <%= label :country, t('select_country') %>
          <%= select_tag :country_id, options_from_collection_for_select(@countries, 'id', 'name'), include_blank: t('select_country'), class: 'form-control', id: 'select_country', required: true %>
        </div>
      </div>

      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, class: 'form-control', required: true %>
      </div>

      <div class="field">
        <%= f.label t(:password) %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "off", class: 'form-control', required: true %>
      </div>

      <div class="field">
        <%= f.label t(:password_confirmation) %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control', required: true %>
      </div>

      <div class="actions">
        <%= f.submit t(:sign_up), class: 'btn btn-success' %>
      </div>
    <% end %>

    <%= render "users/shared/links" %>
  </div>
</div>

