          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown"><div id="user_email"><%= current_user.email %> <b class="caret"></div></b></a>
            <ul class="dropdown-menu">
              <li><%= link_to t('profile'), profile_path(current_user.profile) %></li>
              <li><%= link_to t('sign_out'), sign_out_path %></li>
            </ul>
