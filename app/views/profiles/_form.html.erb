<%= form_for(profile) do |f| %>
  <% if profile.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(profile.errors.count, "error") %> prohibited this profile from being saved:</h2>

      <ul>
      <% profile.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label t('name') %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>

  <div id="location">
    <div class="field" >
      <%= f.label t('select_country') %>
      <%= select_tag '', options_from_collection_for_select(@countries, 'id', 'name'), include_blank: t('select_country'), selected: '0', class: 'form-control', id: 'select_country' %>
    </div>
  </div>

  <div class="actions">
    <%= f.submit 'Сохранить', class: 'btn btn-success' %>
  </div>
<% end %>