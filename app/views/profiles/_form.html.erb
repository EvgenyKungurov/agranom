<%= form_for(profile) do |f| %>
  <% if profile.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(profile.errors.count, "error") %> prohibited this profile from being saved:</h2>

      <ul>
      <% profile.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label t('name') %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>

  <div class="field" >
    <%= f.label t('select_country') %>
    <%= f.select :country_id, options_from_collection_for_select(@countries, 'id', 'name'), { include_blank: t('select_country'), selected: '0'}, class: 'form-control', id: 'select_country' %>
  </div>

  <div class="field" >
    <%= f.label t('select_region') %>
    <%= f.select :region_id, "<option>#{current_user.city.region.name}</option>".html_safe, { selected: '0'}, class: 'form-control', id: 'select_region' %>
  </div>

  <div class="field" >
    <%= f.label t('city') %>
    <%= f.select :city_id, "<option value = #{current_user.city.id}>#{current_user.city.name}</option>".html_safe, { selected: '0'}, class: 'form-control', id: 'select_city' %>
  </div>

  <div class="field">
    <%= f.label t('phone') %>
    <%= f.fields_for :phones do |p| %>
      <%= p.text_field :number, class: 'form-control' %>
    <% end %>
  </div>

  <div class="actions">
    <%= f.submit 'Сохранить', class: 'btn btn-success' %>
  </div>
<% end %>